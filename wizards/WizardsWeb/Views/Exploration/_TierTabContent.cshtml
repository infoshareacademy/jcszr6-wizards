@using Wizards.Core.Model.WorldModels
@model IEnumerable<WizardsWeb.ModelViews.ExplorationModelViews.EnemyIndexModelView>

<div class="row">
    <div class="col-3 p-0 pr-4">
        <div class="bg-paper-color p-3 rounded" style="width: 100%; height: 100%">
            <div class="nav nav-pills" id="enemy-pills-tab" role="tablist">
                @{
                    var count = 0;
                }
                @foreach (var enemy in Model)
                {
                    count++;
                    <div class="col-12 py-1 px-0">
                        <button class="nav-link @(count == 1 ? "active" : "")" style="font-size: 15px; width: 100%; text-align: left;"
                                id="pills-enemy-@(enemy.Id)-tab" data-bs-toggle="pill" data-bs-target="#pills-enemy-@(enemy.Id)" type="button" role="tab" aria-controls="pills-tier1" aria-selected="@(count == 1 ? "true" : "false")">
                            @enemy.Name
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-9 bg-paper-color p-4 rounded">
        <div class="tab-content" id="enemy-pills-tabContent">
            @{
                count = 0;
            }

            @foreach (var enemy in Model)
            {
                count++;
                <div class="tab-pane fade show @(count == 1 ? "active" : "")" id="pills-enemy-@(enemy.Id)" role="tabpanel" aria-labelledby="pills-enemy-@(enemy.Id)-tab" tabindex="0">
                    <partial model="@enemy" name="_EnemyIndexDetails"/>
                </div>
            }
        </div>
    </div>
</div>