@model WizardsWeb.ModelViews.ExplorationModelViews.ExplorationCenterModelView

@{
    ViewData["Title"] = "Titan Raids";
}

<audio id="Titan-Raids-Music" loop="true">
    <source src="~/Sound/Character-select-music-1.mp3">
</audio>

<div class="row">
    <div class="col-12 p-1 mb-3 bg-paper-color rounded">
        <div class="row">
            <div class="col-8 px-3 py-1">
                <h4 class="font-weight-bold pl-3 pt-1">Titan Raids</h4>
            </div>
            <div class="col-4 px-2 py-1">
                <a asp-controller="Exploration" asp-action="Index" class="gbtn gbtn-action">
                    Exploration Center
                </a>
                <a asp-controller="Inventory" asp-action="Index" class="gbtn gbtn-action">
                    Inventory
                </a>
                <a asp-controller="Merchant" asp-action="Index" class="gbtn gbtn-action">
                    Merchant
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 bg-paper-color p-1 rounded">
        <ul class="nav nav-pills" id="pills-tab" role="tablist">
            <li class="nav-item p-2" role="presentation">
                <button class="nav-link active" id="pills-tier1-tab" data-bs-toggle="pill" data-bs-target="#pills-tier1" type="button" role="tab" aria-controls="pills-tier1" aria-selected="true">Tier 1</button>
            </li>
            <li class="nav-item p-2" role="presentation">
                <button class="nav-link" id="pills-tier2-tab" data-bs-toggle="pill" data-bs-target="#pills-tier2" type="button" role="tab" aria-controls="pills-tier2" aria-selected="false">Tier 2</button>
            </li>
            <li class="nav-item p-2" role="presentation">
                <button class="nav-link" id="pills-tier3-tab" data-bs-toggle="pill" data-bs-target="#pills-tier3" type="button" role="tab" aria-controls="pills-tier3" aria-selected="false">Tier 3</button>
            </li>
            <li class="nav-item p-2" role="presentation">
                <button class="nav-link" id="pills-tier4-tab" data-bs-toggle="pill" data-bs-target="#pills-tier4" type="button" role="tab" aria-controls="pills-tier4" aria-selected="false">Tier 4</button>
            </li>
            <li class="nav-item p-2" role="presentation">
                <button class="nav-link" id="pills-tier5-tab" data-bs-toggle="pill" data-bs-target="#pills-tier5" type="button" role="tab" aria-controls="pills-tier5" aria-selected="false">Tier 5</button>
            </li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-12 mt-4">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-tier1" role="tabpanel" aria-labelledby="pills-tier1-tab" tabindex="0">
                <partial model="@Model.TierOneEnemies" name="_TierTabContent" />
            </div>
            <div class="tab-pane fade" id="pills-tier2" role="tabpanel" aria-labelledby="pills-tier2-tab" tabindex="0">
                <partial model="@Model.TierTwoEnemies" name="_TierTabContent" />
            </div>
            <div class="tab-pane fade" id="pills-tier3" role="tabpanel" aria-labelledby="pills-tier3-tab" tabindex="0">
                <partial model="@Model.TierThreeEnemies" name="_TierTabContent" />
            </div>
            <div class="tab-pane fade" id="pills-tier4" role="tabpanel" aria-labelledby="pills-tier4-tab" tabindex="0">
                <partial model="@Model.TierFourEnemies" name="_TierTabContent" />
            </div>
            <div class="tab-pane fade" id="pills-tier5" role="tabpanel" aria-labelledby="pills-tier5-tab" tabindex="0">
                <partial model="@Model.TierFiveEnemies" name="_TierTabContent" />
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous">
</script>

<script>
    function audioVolume() {
        document.getElementById("Titan-Raids-Music").volume = 0.08;
        document.getElementById("Titan-Raids-Music").play();
    }
    window.onload = audioVolume;
</script>