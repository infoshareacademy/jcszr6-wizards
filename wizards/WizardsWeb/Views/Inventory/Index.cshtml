@model WizardsWeb.ModelViews.Inventory.InventoryModelView

@{
    ViewData["Title"] = "Inventory";
}

<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h5 class="my-0 font-weight-bold">
                        @(Model.HeroNickName)'s Inventory
                    </h5>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div class="btn-group btn-block">
                    <a class="btn btn-outline-warning" asp-controller="Hero" asp-action="Details">Back to Hero</a>
                    <a class="btn btn-outline-warning" asp-controller="Merchant" asp-action="Index">Go to Merchant</a>
                </div>
            </li>
        </ul>
        <br />
    </div>
</div>


<div class="row">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="col-12 alert alert-danger h2 text-center p-3" style="list-style-type: none;"></div>
</div>


<div class="row">
    <div class="col-md-8">


        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h5>Equipment</h5>
                    <partial name="~/Views/Item/_ItemIndexDetails.cshtml" model="@Model.Equipped" />
                    <hr />
                    <partial name="_Inventory" model="@Model" />
                    <hr />
                </div>
            </li>

        </ul>
    </div>

    <div class="col-md-4">
                <div>
                    <partial name="~/Views/Hero/_HeroSummary.cshtml" model="@Model.HeroSummary" />
                    <br />
                    <partial name="~/Views/Hero/_HeroAttributes.cshtml" model="@Model.Attributes" />
                </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous">
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }
