@model WizardsWeb.ModelViews.Inventory.InventoryModelView

@{
    ViewData["Title"] = "Inventory";
}

<h2>Hero's Inventory</h2>
<hr />
<div class="row">
    <div class="col-6">
        <div class="btn-group">
            <a class="btn btn-warning" asp-controller="Hero" asp-action="Details">Back to Hero</a>
            <a class="btn btn-warning" asp-controller="Merchant" asp-action="Index">Go to Merchant</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="col-12 alert alert-danger h2 text-center p-3" style="list-style-type: none;"></div>
</div>

<div class="row">
    <div class="col-8">
        <h3>Equipment</h3>
        <partial name="_ItemIndexDetails" model="@Model.Equipped"/>
        <hr/>
        <partial name="_Inventory" model="@Model"/>
        <hr/>
    </div>
    <div class="col-4">
        <partial name="_HeroSummary" model="@Model.HeroSummary"/>
        <br/>
        <partial name="_HeroAttributes" model="@Model.Attributes"/>
    </div>
</div>

<script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" 
    crossorigin="anonymous">
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}