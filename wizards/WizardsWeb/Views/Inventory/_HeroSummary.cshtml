@model WizardsWeb.ModelViews.Inventory.InventoryModelView

<h4>Hero's Summary</h4>
<hr />
<div class="col-md-12">
    <div class="row">
        <div class="col-md-7">
            <label class="align-content-center" asp-for="HerosAvargeItemTier"></label>
        </div>
        <div class="col-md-5">
            <h5><span class="font-weight-bold">@($"{Model.HerosAvargeItemTier:##0.00}")</span></h5>
