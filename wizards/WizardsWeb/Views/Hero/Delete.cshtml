@model WizardsWeb.ModelViews.HeroDeleteModelView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Hero</h1>
<br />
<h3 class="alert-danger">Are you sure you want to delete @Model.NickName?</h3>
<h4 class="alert-danger">All progress made on this character will be lost!</h4>
<hr />

<div>
    <div class="row">
        <div class="col-md-4">
            <img src="~/@Model.AvatarImageAddres()" width="300" height="400" />
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/@Model.ProfessionImageAddres()" width="100" height="100" />
                </div>
                <div class="col-md-6">
                    <h4>@Model.NickName</h4>
                    <h5>@Model.Profession.ToString()</h5>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <h6>Gold: </h6>
                    <h6>Ranking Points: </h6><br />
                    <h6>Total match played: </h6>
                    <h6>Total match won: </h6>
                    <h6>Total match lost: </h6>
                    <h6>Win ratio: </h6>
                </div>
                <div class="col-md-6">
                    <h6>@Model.Gold</h6>
                    <h6>@Model.Statistics.RankPoints</h6><br />
                    <h6>@Model.Statistics.TotalMatchPlayed</h6>
                    <h6>@Model.Statistics.TotalMatchWin</h6>
                    <h6>@Model.Statistics.TotalMatchLoose</h6>
                    <h6>@Model.GetWinRatio()</h6>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <form asp-action="Delete">
            <div class="form-group">
                <input asp-for="Id" hidden="true" />
                <input asp-for="PlayerId" hidden="true" />
                
                <label asp-for="ConfirmNickName"></label>
                <input asp-for="ConfirmNickName" class="form-control" />
                <span asp-validation-for="ConfirmNickName" class="text-danger"></span>
            </div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Details" asp-controller="Player" asp-route-id="@Model.PlayerId">Cancel</a>
        </form>
    </div>
</div>
