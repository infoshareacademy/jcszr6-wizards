@model WizardsWeb.ModelViews.HeroDeleteModelView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Hero</h1>
<br />
<h3 class="alert-danger">Are you sure you want to delete @Model.Basics.NickName?</h3>
<h4 class="alert-danger">All progress made on this character will be lost!</h4>
<hr />

<div>
    <div class="row">
        <div class="col-md-4">
            <partial name="_HeroBasicPresentation" model="@Model.Basics"/>
        </div>
        <div class="col-md-4">
            <partial name="_HeroStatistics" model="@Model.Statistics"/>
        </div>
    </div>

    <div class="row">
        <form asp-action="Delete">
            <div class="form-group">
                <input asp-for="Id" hidden="true" />
                <input asp-for="PlayerId" hidden="true" />
                
                <label asp-for="ConfirmNickName"></label>
                <input asp-for="ConfirmNickName" class="form-control" />
                <span asp-validation-for="ConfirmNickName" class="text-danger"></span>
            </div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a type="button" class="btn btn-success" asp-action="Details" asp-controller="Player">Cancel</a>
        </form>
    </div>
</div>
