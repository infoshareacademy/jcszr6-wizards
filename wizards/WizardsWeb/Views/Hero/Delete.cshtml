@model WizardsWeb.ModelViews.HeroModelViews.HeroDeleteModelView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Hero</h1>
<div class="alert alert-danger">
    <h3>Are you sure you want to delete @Model.Basics.NickName?</h3>
    <h4>All progress made on this character will be lost!</h4>
</div>
<hr />
<div>
    <div class="row">
        <div class="col-md-4">
            <partial name="_HeroBasicPresentation" model="@Model.Basics" />
        </div>
        <div class="col-md-4">
            <partial name="_HeroStatistics" model="@Model.Statistics" /><br/><br/>
            <partial name="_HeroSummary" model="Model.Summary"/>
        </div>
    </div>

<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h4 class="my-0 font-weight-bold">
                        Delete Hero
                    </h4>
                </div>
            </li>
        </ul>
        <br />
        <div class="alert alert-danger">
            <h3>Are you sure you want to delete @Model.Basics.NickName?</h3>
            <h4>All progress made on this character will be lost!</h4>
        </div>

        <br />

        <div>
            <div class="row">
                <div class="col-md-4">
                    <partial name="_HeroBasicPresentation" model="@Model.Basics" />
                </div>
                <div class="col-md-4">
                    <partial name="_HeroStatistics" model="@Model.Statistics" />
                </div>

                <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <form asp-action="Delete">
                            <div class="form-group">
                                <label asp-for="ConfirmNickName" class="font-weight-bold"></label>
                                <input asp-for="ConfirmNickName" class="form-control" />
                                <span asp-validation-for="ConfirmNickName" class="text-danger"></span>
                            </div>
                            <div class="btn-group btn-block">
                                <a type="button" class="btn btn-outline-success" asp-action="Details" asp-controller="Player">Cancel</a>
                                <input type="submit" value="Delete" class="btn btn-outline-danger" />
                            </div>
                        </form>
                        </li>
                    </ul>
                </div>
            </div>

