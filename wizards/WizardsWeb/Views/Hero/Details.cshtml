@model WizardsWeb.ModelViews.HeroDetailsModelView

@{
    ViewData["Title"] = $"{Model.Basics.NickName}";
}

<div class="row">
    <div class="col-md-4">
        <partial name="_HeroBasicPresentation" model="@Model.Basics" />
    </div>

    <div class="col-md-8">
        <div class="row">
            <div class="col-md-6">
                <partial name="_HeroAttributes" model="Model.Attributes" />
            </div>

            <div class="col-md-6">
                <partial name="_HeroStatistics" model="Model.Statistics" />
            </div>
        </div>

        <br />

        <div class="flex-md-row">
            <ul class="list-group btn-block">
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h5 class="my-0 font-weight-bold">
                            Hero actions
                        </h5>
                    </div>
                </li>

                <li class="list-group-item d-flex justify-content-between btn-group lh-sm d-block">
                    <a type="button" class="btn btn-outline-secondary" asp-action="Equipment">Equipment</a>
                    <a type="button" class="btn btn-outline-primary" asp-action="Merchant">Merchant</a>
                    <a type="button" class="btn btn-outline-info" asp-controller="Player" asp-action="Details">Back to Hero choice</a>
                    <a type="button" class="btn btn-outline-danger" asp-action="ArenaPvP">PvP Arena</a>
                </li>
            </ul>
        </div>

    </div>

</div>
