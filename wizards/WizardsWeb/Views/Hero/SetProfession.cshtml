@using Wizards.Core.Model.UserModels.Enums
@model WizardsWeb.ModelViews.HeroModelViews.HeroCreateModelView

@{
    ViewData["Title"] = "Set Profession";
}
<header>
    <style>
        [type=radio] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }

        /* IMAGE STYLES */
        [type=radio] + img {
            cursor: pointer;
        }

        /* CHECKED STYLES */
        [type=radio]:checked + img {
            outline: 4px solid #f00;
            height: 120px;
            width: 120px;
        }
    </style>
</header>

<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between bg-paper-color">
                <div>
                    <h4 class="my-0 font-weight-bold">
                        Create New Hero
                    </h4>
                </div>
            </li>
        </ul>

        <br />

        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between bg-paper-color">
                <div>
                    <h5 class="my-0 font-weight-bold">
                        Choose profession of your hero
                    </h5>
                </div>
            </li>

            <li class="list-group-item d-flex justify-content-between bg-paper-color">
                <div>
                    <form asp-action="SetProfession">
                        <input asp-for="AvatarImageNumber" hidden="true" />

                        <div class="row">
                            <div class="col-md-1" align="center"></div>
                            <div class="col-md-2" align="center">
                                <div>
                                    <label>
                                        <input asp-for="Profession" type="radio" value="@HeroProfession.Sorcerer" />
                                        <img class="p-1" src="~/Images/Hero/Professions/Sorcerer.png" width="100" height="100" />
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h5 class="font-weight-bold">Sorcerer</h5>
                                <p class="font-weight-bold">
                                    Sorcerers are using the power of natural elements to deal high damage and protect themselves.
                                    They are using staffs, spell-books or scepters to concentrate natural energy. Peace of mind and perfection
                                    helps Sorcerers to tame wild elements and perform powerful attacks. They are also very precise with actions.
                                    Theirs power is as wild as elements they uses.
                                </p>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-md-1" align="center">
                            </div>
                            <div class="col-md-2" align="center">
                                <div>
                                    <label>
                                        <input asp-for="Profession" type="radio" value="@HeroProfession.Necromancer"/>
                                        <img class="p-1" src="~/Images/Hero/Professions/Necromancer.png" width="100" height="100" />
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h5 class="font-weight-bold">Necromancer</h5>
                                <p class="font-weight-bold">
                                    Death magic and blood rituals are the most dangerous and powerful aspects of the world. Necromancers specializes in using this mysterious knowledge
                                    to corrupt enemies and deals damage that can overpass defense. To channel magical force they are using the most powerful artifact: Scythe, Ritual Cups and Urn's.
                                    Theirs dark art abilities are as dangerous as terrifying.
                                </p>
                            </div>
                        </div>
                        
                        <hr />
                        <div class="row">
                            <div class="col-md-1" align="center">
                            </div>
                            <div class="col-md-2" align="center">
                                <div>
                                    <label>
                                        <input asp-for="Profession" type="radio" value="@HeroProfession.Illusionist" disabled=""/>
                                        <img class="p-1" src="~/Images/Hero/Professions/Illusionist.png" width="100" height="100" />
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h5 class="font-weight-bold text-secondary">Illusionist</h5>
                                <p class="font-weight-bold text-secondary">Coming soon...</p>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="btn-group btn-block">
                                <input type="submit" asp-action="SetProfession" value="Set profession" class="gbtn gbtn-action" />
                                <a class="gbtn gbtn-danger" asp-controller="Player" asp-action="Details">Leave Creator</a>
                            </div>
                        </div>
                    </form>
                </div>
            </li>
        </ul>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}