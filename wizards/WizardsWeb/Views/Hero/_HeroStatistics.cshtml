@model WizardsWeb.ModelViews.Properties.StatisticsModelView

<div class="row">
    <div class="col-md-12">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h5 class="my-0 font-weight-bold">
                        Hero statistics
                    </h5>
                </div>
            </li>


            <li class="list-group-item d-flex justify-content-between lh-sm">
            <label asp-for="RankPoints"></label>
            @($"{Model.RankPoints:##,##0}")
            </li>

            <li class="list-group-item d-flex justify-content-between lh-sm">
            <label asp-for="TotalMatchPlayed"></label>
            @($"{Model.TotalMatchPlayed:##,##0}")
            </li>

            <li class="list-group-item d-flex justify-content-between lh-sm">
            <label asp-for="TotalMatchWin"></label>
            @($"{Model.TotalMatchWin:##,##0}")
            </li>

            <li class="list-group-item d-flex justify-content-between lh-sm">
            <label asp-for="TotalMatchLoose"></label>
            @($"{Model.TotalMatchLoose:##,##0}")
            </li>

            <li class="list-group-item d-flex justify-content-between lh-sm">
            <label asp-for="WinRatio"></label>
            @Model.WinRatio
            </li>
        </ul>
    </div>
</div>