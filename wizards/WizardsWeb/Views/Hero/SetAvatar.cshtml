@model WizardsWeb.ModelViews.HeroModelViews.HeroCreateModelView

@{
    ViewData["Title"] = "Set Avatar";
}

<h1>Create New Hero</h1>
<br />
<h3>Choose Avatar of your hero</h3>
<form asp-action="SetAvatar">
    <input asp-for="Profession" hidden="true" />
    <hr />
    <div class="row">
        @for (int i = 1; i <= 7; i++)
        {
            var image = $"Images/Hero/Avatars/Wizard-{i}.png";
            <div class="col-sm-3">
                <div class="row" align="center">
                    <img src="~/@image" width="210" height="280" />
                </div>
                <div class="row">
                    @if (i == 1)
                    {
                        <input asp-for="AvatarImageNumber" type="radio" value="@i" checked />
                    }
                    else
                    {
                        <input asp-for="AvatarImageNumber" type="radio" value="@i" />
                    }
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Set Avatar" class="btn btn-primary" />
    </div>
</form>

<div>
    <form asp-action="SetProfessionView">
        <input asp-for="Profession" hidden="true" />
        <input asp-for="AvatarImageNumber" hidden="true" />
        <div class="btn-group">
            <input type="submit" asp-controller="Hero" asp-action="SetProfessionView" value="Back" class="btn btn-warning" />
            <a class="btn btn-danger" asp-controller="Player" asp-action="Details">Leave Creator</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
