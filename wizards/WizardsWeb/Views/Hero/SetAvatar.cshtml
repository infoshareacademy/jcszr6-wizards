@model WizardsWeb.ModelViews.HeroCreateModelView

@{
    ViewData["Title"] = "Set Avatar";
}

<h1>Create New Hero</h1>
<br />
<h3>Choose Avatar of your hero</h3>
<form asp-action="SetAvatar">
    <input asp-for="PlayerId" hidden="true" />
    <input asp-for="Profession" hidden="true" />
    <hr />
    <div class="row">
        @for (int i = 1; i <= 7; i++)
        {
            var image = $"Images/Hero/Avatars/Wizard-{i}.png";
            <div class="col-sm-3">
                <div class="row" align="center">
                    <img src="~/@image" width="210" height="280"/>
                </div>
                <div class="row">
                    <div align="center"><input asp-for="AvatarImageNumber" type="radio" value="@i"/></div>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Set Avatar" class="btn btn-primary" />
    </div>
</form>

<div>
    <br />
    <a asp-controller="Player" asp-action="Details" asp-route-id="@Model.PlayerId">Leave Creator</a>
    <br/>
    <a asp-action="SetProfessionView" asp-route-playerId="@Model.PlayerId" asp-route-profession="@Model.Profession">Back to Profession choice</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
