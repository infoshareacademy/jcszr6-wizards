@model Wizards.BusinessLogic.PasswordChange

@{
    ViewData["Title"] = "EditPassword";
}

<h1>@Model.UserName</h1>
<h4>PasswordChange</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden="true" />
            <input asp-for="UserName" hidden="true" />
            <input asp-for="Password" hidden="true" />
            <div class="form-group">
                <label asp-for="EnterOldPassword" class="control-label"></label>
                <input asp-for="EnterOldPassword" class="form-control" />
                <span asp-validation-for="EnterOldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Back to Edit</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
