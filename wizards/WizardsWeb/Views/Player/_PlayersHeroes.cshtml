@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WizardsWeb.ModelViews.PlayerDetailsModelView

<h2>Player's Heroes</h2>
<br/>
<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="Heroes.First().NickName"></label>
        </th>
        <th>
            <label asp-for="Heroes.First().Profession"></label>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var hero in Model.Heroes)
    {
        <tr>
            <td>
                @hero.NickName
            </td>
            <td>
                @hero.Profession
            </td>
            <td>
                <button asp-action="Details" asp-route-id="@hero.Id">Play</button> |
                <button asp-action="Delete" asp-route-id="@hero.Id">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>