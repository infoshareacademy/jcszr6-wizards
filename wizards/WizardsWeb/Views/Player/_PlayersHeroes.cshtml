@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WizardsWeb.ModelViews.PlayerModelViews.PlayerDetailsModelView

<h2>Player's Heroes</h2>
<a type="button" class="btn btn-warning" asp-controller="Hero" asp-action="StartCreation">Create New Hero</a>
<br /><br />
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="Heroes.First().AvatarImageNumber">Avatar</label>
            </th>
            <th>
                <label asp-for="Heroes.First().NickName">Nick Name</label>
            </th>
            <th>
                <label asp-for="Heroes.First().Profession">Profession</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hero in Model.Heroes)
        {
            var avatar = $"Images/Hero/Avatars/Wizard-{hero.AvatarImageNumber}.png";
            <tr>
                <td>
                    <img src="~/@avatar" width="90" height="120" />
                </td>
                <td>
                    @hero.NickName
                </td>
                <td>
                    @hero.Profession
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-controller="Selector" asp-action="SelectHero" asp-route-id="@hero.Id" asp-route-actionName="Details">
                        Play Character
                    </a>
                    <br/><br/>
                    <a type="button" class="btn btn-danger btn-sm" asp-controller="Selector" asp-action="SelectHero" asp-route-id="@hero.Id" asp-route-actionName="Delete">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>