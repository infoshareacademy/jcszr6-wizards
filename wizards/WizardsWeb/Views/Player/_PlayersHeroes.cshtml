@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WizardsWeb.ModelViews.PlayerModelViews.PlayerDetailsModelView

<div class="row">
    <div class="col">
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <div>
                        <h5 class="my-0 font-weight-bold">
                            Player's Heroes
                        </h5>
                        <hr />
                        <a type="button" class="btn btn-outline-success" asp-controller="Hero" asp-action="StartCreation">Create New Hero</a>
                    </div>
                </div>
            </li>

            <table class="table table-light table-hover">
                <thead>
                    <tr>
                        <th>
                            <label asp-for="Heroes.First().AvatarImageNumber">Avatar</label>
                        </th>
                        <th>
                            <label asp-for="Heroes.First().NickName">Nick Name</label>
                        </th>
                        <th>
                            <label asp-for="Heroes.First().Profession">Profession</label>
                        </th>
                        <th>
                           <label>Options</label>
                        </th>
                    </tr>
                </thead>
                <tbody> 
                    @foreach (var hero in Model.Heroes)
                    {
                        var avatar = $"Images/Hero/Avatars/Wizard-{hero.AvatarImageNumber}.png";
                        <tr>
                            <td class="align-middle">
                                <img src="~/@avatar" width="90" height="120" />
                            </td>
                            <td class="align-middle">
                                @hero.NickName
                            </td>
                            <td class="align-middle">
                                @hero.Profession
                            </td>
                            <td class="align-middle">
                                <li class="btn-group btn-block">
                                    <a type="button" class="btn btn-outline-primary" asp-controller="Selector" asp-action="SelectHero" asp-route-id="@hero.Id" asp-route-actionName="Details">
                                        Play Character
                                    </a>
                                    <a type="button" class="btn btn-outline-danger" asp-controller="Selector" asp-action="SelectHero" asp-route-id="@hero.Id" asp-route-actionName="Delete">
                                        Delete
                                    </a>
                                </li>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </ul>
    </div>
</div>