@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WizardsWeb.ModelViews.PlayerModelViews.PlayerCreateModelView

@{
    ViewData["Title"] = "Create new Player";
}


<div class="row justify-content-center align-items-center">
    <div class="col-10">
        <div class="card bg-paper-color" style="height: 750px">
            <div class="row">
                <div class="col-7" style="height: 750px">
                    <img src="~/Images/Tapeta-2.jpg" class="rounded-left static-image-not-dragable" style="height: 100%; width: 100%" />
                </div>

                <div class="col-5 d-flex" style="height: 750px">
                    <div class="card-body mx-5">

                        <div class="text-center pb-5">
                            <img src="~/Images/logo.png" class="static-image-not-dragable" alt="Site Logo" style="height: 30%; width: 30%" />
                        </div>

                        <form asp-action="Create">
                            <p>Please create your account</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-1">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="mb-1">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-1">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-1">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="text-center pt-1 mb-5">
                                <input type="submit" value="Create" class="gbtn gbtn-action gbtn-lg btn-block" />
                            </div>
                            <div class="d-flex align-items-center justify-content-center pb-3">
                                <p class="mb-0">You already have an account?</p>

                                <div>
                                    <a class="gbtn gbtn-accept gbtn-sm mx-2" id="login" asp-controller="Player" asp-action="Login">Login</a>
                                </div>
                            </div>
                            <div>
                                <a class="gbtn gbtn-danger btn-block ml-0 mr-4" asp-controller="Home" asp-action="Index">Back to Home Page</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}