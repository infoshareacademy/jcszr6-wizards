@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WizardsWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

</head>

<style>
    .bg-brown {
        background-color: #482001;
    }

    .bg-leather {
        background-color: #341d0b;
    }

    .bg-paper-color {
        background-color: #ffefd8;
    }

    .bg-paper-header {
        background-color: #ffe0a3;
    }

    .text-golden-dark {
        color: #a47c01;
    }

    .btn-outline-warning {
        color: #cd9500;
    }


    .gbtn {
        display: inline-block;
        user-select: none;
        margin: 0px;
        padding: 8px 20px;
        background-image: url(/Images/Buttons/game-btn-action.png);
        background-size: 100% 100%;
        background-repeat: space;
        background-attachment: inherit;
        border-radius: 2px;
        color: white;
        text-decoration: none;
        text-align: center;
        font-size: 100%;
        filter: brightness(100%);
    }

        /* extension of general game button class for behaviors */
        .gbtn:hover {
            cursor: pointer;
            color: white;
            filter: brightness(130%);
        }

        .gbtn:active {
            cursor: pointer;
            color: white;
            filter: brightness(60%);
        }

    /* special disabled class */
    .gbtn-disabled {
        color: white;
        pointer-events: none;
        filter: grayscale(1) brightness(110%) contrast(40%);
    }

    /* sizing classes sm => small  lg => large*/
    .gbtn-sm {
        margin: 0px;
        padding: 5px 12px;
        font-size: 90%;
    }

    .gbtn-lg {
        margin: 0px;
        padding: 12px 28px;
        font-size: 120%;
    }

    /* formating background classes for different occasions */
    .gbtn-action {
        background-image: url(/Images/Buttons/game-btn-action.png);
        color: white;
    }

    .gbtn-accept {
        background-image: url(/Images/Buttons/game-btn-accept.png);
        color: white;
    }

    .gbtn-danger {
        background-image: url(/Images/Buttons/game-btn-danger.png);
        color: white;
    }

    .gbtn-magical {
        background-image: url(/Images/Buttons/game-btn-premium.png);
        color: white;
    }

    .gbtn-premium {
        background-image: url(/Images/Buttons/game-btn-magical.png);
        color: white;
    }

    .gbtn-technical {
        background-image: url(/Images/Buttons/game-btn-technical.png);
        color: white;
    }
</style>


<body class="bg-leather">
    <div class="cover-container d-flex w-100 h-100 mx-auto bg-brown flex-column">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-brown text-white box-shadow">
                <div class="container">

                    <img src="~/Images/logo.png" class="img-responsive" alt="Site Logo" style="height:20%; width: 20%" />


                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 ">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary disabled" asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary disabled" asp-area="" asp-controller="About" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary disabled" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Search" asp-action="Index">Ranking</a>
                            </li>
                        </ul>

                        <partial name="_LoginPartial" />

                    </div>
                </div>
            </nav>
        </header>

        <div class="container-fluid bg-leather d-flex w-100 h-100 p-3 mx-auto flex-column">


            <main class="col bg-leather">
                <div class="bg-leather p-3">
                    <div class="container bg-leather">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </main>

        </div>

        <footer class="footer mt-auto text-golden-dark navbar-light bg-brown box-shadow">
            <div class="container" style='text-align:center'>
                &copy; 2022 - WizardsWeb - <a href="https://github.com/infoshareacademy/jcszr6-wizards.git" target="_blank"> GIT Repository</a> Ver. 2.0
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>