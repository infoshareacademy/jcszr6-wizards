@model WizardsWeb.ModelViews.ItemModelViews.ItemCreateModelView
@using Wizards.Core.Model.Enums
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemCreateModelView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" >                   
                    @foreach (var option in Enum.GetValues(typeof(ItemType)))
                    {
                        <option value="@option">@option.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restriction" class="control-label"></label>
                <select asp-for="Restriction" class="form-control" >                   
                    @foreach (var option in Enum.GetValues(typeof(ProfessionRestriction)))
                    {
                        <option value="@option">@option.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Restriction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tier" class="control-label"></label>
                <input asp-for="Tier" min="1" max="5" class="form-control" />
                <span asp-validation-for="Tier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyPrice" class="control-label"></label>
                <input asp-for="BuyPrice" min="1" max="100000" class="form-control" />
                <span asp-validation-for="BuyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPrice" class="control-label"></label>
                <input asp-for="SellPrice" min="1" max="100000" class="form-control" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Damage" class="control-label"></label>
                <input asp-for="Damage" min="-10" max="50" class="form-control" />
                <span asp-validation-for="Damage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precision" class="control-label"></label>
                <input asp-for="Precision" min="-10" max="50" class="form-control" />
                <span asp-validation-for="Precision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" min="-10" max="50" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxHealth" class="control-label"></label>
                <input asp-for="MaxHealth" min="0" max="500"class="form-control" />
                <span asp-validation-for="MaxHealth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reflex" class="control-label"></label>
                <input asp-for="Reflex" min="-10" max="50" class="form-control" />
                <span asp-validation-for="Reflex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defense" class="control-label"></label>
                <input asp-for="Defense" min="-10" max="50" class="form-control" />
                <span asp-validation-for="Defense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
