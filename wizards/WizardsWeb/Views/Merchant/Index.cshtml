@model WizardsWeb.ModelViews.Merchant.MerchantModelView

@{
    ViewData["Title"] = "Merchant";
}

<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item justify-content-between bg-paper-color">
                <div>
                    <h4 class="my-0 font-weight-bold text-center">
                        Merchant
                    </h4>
                </div>
            </li>

            <li class="list-group-item d-flex justify-content-between bg-paper-color">
                <div class="btn-group btn-block">
                    <a class="gbtn gbtn-action" asp-controller="Hero" asp-action="Details">Back to Hero</a>
                    <a class="gbtn gbtn-action" asp-controller="Inventory" asp-action="Index">Back to Inventory</a>
                </div>
            </li>
        </ul>
        <br />
    </div>
</div>

<div class="row">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="col-12 alert alert-danger h2 text-center p-3" style="list-style-type: none;"></div>
</div>

<div class="row">
    <div class="col-md-6">
        <ul class="list-group">
            <li class="list-group-item justify-content-between">
                <div>
                    <partial name="_HeroStorage" model="@Model.HeroStorage" />
                </div>
            </li>
        </ul>
    </div>

    <div class="col-md-6">
        <ul class="list-group">
            <li class="list-group-item justify-content-between">
                <div>
                    <partial name="_MerchantStorage" model="@Model.MerchantStorage" />
                </div>
            </li>
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous">
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}